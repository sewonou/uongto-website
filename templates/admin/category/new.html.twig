{% extends 'admin/base.html.twig' %}

{% block title 'Nouvel article' %}


{% block body %}
<section id="striped-row-form-layouts">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title" id="striped-row-layout-basic">{% if category is not defined %}Création {% else %} Modification {% endif %} d'une catégorie</h4>

                </div>
                <div class="card-content collpase show">
                    <div class="card-body">
                        {{ form_start(form, {'attr': {'class': 'form form-horizontal striped-rows form-bordered'}}) }}
                        <div class="form-body">
                            <h4 class="form-section"><i class="ft-user"></i> Exigences</h4>
                            <div class="form-group row mx-auto">
                                {{ form_label(form.title, null, {'label_attr': {'class': 'col-md-3 label-control'}}) }}
                                <div class="col-md-9">
                                    {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
                                    <div class="danger">
                                        {{ form_errors(form.title) }}
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row mx-auto">
                                {{ form_label(form.type, null, {'label_attr': {'class': 'col-md-3 label-control'}}) }}
                                <div class="col-md-9">
                                    {{ form_widget(form.type, {'attr': {'class': 'form-control'}}) }}
                                    <div class="danger">
                                        {{ form_errors(form.type) }}
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row mx-auto">
                                {{ form_label(form.metaDescription, null, {'label_attr': {'class': 'col-md-3 label-control'}}) }}
                                <div class="col-md-9">
                                    {{ form_widget(form.metaDescription, {'attr': {'class': 'form-control'}}) }}
                                    <div class="danger">
                                        {{ form_errors(form.title) }}
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row mx-auto last">
                                {{ form_label(form.isActive, null,{'label_attr': {'class': 'col-md-3 label-control'}}) }}
                                <div class="col-md-3">
                                    {{ form_widget(form.isActive, {'attr' : {'class' : 'custom-control custom-check mr-1 mt-1'}}) }}
                                    <div class="danger">
                                        {{ form_errors(form.isActive) }}
                                    </div>
                                </div>
                                {{ form_label(form.isPublished, null,{'label_attr': {'class': 'col-md-3 label-control'}}) }}
                                <div class="col-md-3">
                                    {{ form_widget(form.isPublished, {'attr' : {'class' : 'custom-control custom-check mr-1 mt-1'}}) }}
                                    <div class="danger">
                                        {{ form_errors(form.isPublished) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-actions text-center">
                            <a href="{{ path('app_admin_category') }}" class="btn btn-warning mr-1">
                                <i class="ft-x"></i> Annuler
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="la la-check-square-o"></i> Enregistrer
                            </button>
                        </div>
                        {{ form_row(form._token) }}
                        {{ form_end(form, {render_rest: false} ) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
{% block javascripts %}

{% endblock %}


