{% extends 'admin/base.html.twig' %}

{% block title 'Les Articles' %}


{% block body %}
    <section id="pagination">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Toutes les personnalit√©s</h4>
                        <div class="heading-elements">
                            <a href="{{ path('app_admin_personality_add') }}" type="button" class="btn btn-info btn-min-width btn-glow mr-1 mb-1">Ajouter</a>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table alt-pagination customer-wrapper">
                                <thead>
                                <tr>
                                    <th>Photo</th>
                                    <th>Nom complet</th>
                                    <th>Sexe</th>
                                    <th>Poste</th>
                                    <th>Etat</th>
                                    <th>Options</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% if personalities %}
                                    {% for personality in personalities %}
                                        <tr>
                                            <td class="align-middle">
                                                <span class="avatar avatar-online"><img src="{{ vich_uploader_asset(personality, 'imageFile') }}" alt="{{ personality.slug }}"></span>
                                            </td>
                                            <td class="align-middle">
                                                <div class="name">{{ personality.fullName }}</div>
                                            </td>
                                            <td class="align-middle">
                                                <div class="tickets">{{ personality.gender }}</div>
                                            </td>
                                            <td class="align-middle">
                                                <div class="tickets">{{ personality.office }}</div>
                                            </td>
                                            <td class="align-middle">
                                                <div class="skin skin-flat">
                                                    <fieldset>
                                                        <input type="checkbox" id="input-16" {% if personality.isPublished == true %}checked {% else %} unchecked {% endif %}>
                                                    </fieldset>
                                                </div>

                                            </td>

                                            <td class="align-middle">
                                                <div class="option ">
                                                    <a href="{{ path('app_admin_personality_edit', {'id': personality.id}) }}"><i class="la la-pencil-square success"></i></a>
                                                    <a href="#"><i class="la la-trash danger"></i></a>
                                                </div>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                {% endif %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block vendorscss %}
    <link rel="stylesheet" type="text/css" href="{{ asset('app-assets/vendors/css/tables/datatable/datatables.min.css') }}">
{% endblock %}

{% block vendorsjs %}
    <script src="{{ asset('app-assets/vendors/js/tables/datatable/datatables.min.js') }}"></script>
{% endblock %}

{% block pagesjs  %}
    <script src="{{ asset('app-assets/js/scripts/pages/support-customers.js') }}"></script>
{% endblock %}
