{% extends 'admin/base.html.twig' %}
{% form_theme form 'admin/_partials/form/form_errors.html.twig' %}
{% block title 'Nouvel utilisateur' %}


{% block body %}
<section id="striped-row-form-layouts">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title" id="striped-row-layout-basic">Créer un nouveau utilisateur</h4>
                </div>
                <div class="card-content collpase show">
                    <div class="card-body">
                        {{ form_start(form, {'attr' : {'class': 'form form-horizontal striped-rows form-bordered'}}) }}
                         <div class="form-body">
                             <h4 class="form-section"><i class="ft-user"></i> Identité</h4>
                             <div class="form-group row mx-auto">
                                 {{ form_label(form.firstName, null,{'label_attr': {'class': 'col-md-3 label-control'}}) }}
                                 <div class="col-md-9">
                                     {{ form_widget(form.firstName, {'attr' : {'class' : 'form-control'}}) }}
                                     <div class="danger">
                                         {{ form_errors(form.firstName) }}
                                     </div>

                                 </div>

                             </div>
                             <div class="form-group row mx-auto">
                                 {{ form_label(form.lastName, null,{'label_attr': {'class': 'col-md-3 label-control'}}) }}
                                 <div class="col-md-9">
                                     {{ form_widget(form.lastName, {'attr' : {'class' : 'form-control'}}) }}
                                     {{ form_errors(form.lastName) }}
                                 </div>

                             </div>
                             <div class="form-group row mx-auto">
                                 {{ form_label(form.email, null,{'label_attr': {'class': 'col-md-3 label-control'}}) }}
                                 <div class="col-md-9">
                                     {{ form_widget(form.email, {'attr' : {'class' : 'form-control'}}) }}
                                     {{ form_errors(form.email) }}
                                 </div>

                             </div>
                             <div class="form-group row mx-auto">
                                 {{ form_label(form.imageFile, null,{'label_attr': {'class': 'col-md-3 label-control'}}) }}
                                 <div class="col-md-9">
                                     {{ form_widget(form.imageFile, {'attr' : {'class' : 'form-control'}}) }}
                                     {{ form_errors(form.imageFile) }}
                                 </div>
                             </div>

                             <h4 class="form-section"><i class="ft-lock"></i> Connexion</h4>
                             <div class="form-group row mx-auto">
                                 {{ form_label(form.username, null,{'label_attr': {'class': 'col-md-3 label-control'}}) }}
                                 <div class="col-md-9">
                                     {{ form_widget(form.username, {'attr' : {'class' : 'form-control'}}) }}
                                     {{ form_errors(form.username) }}
                                 </div>

                             </div>
                             <div class="form-group row mx-auto">
                                 {{ form_label(form.password, null,{'label_attr': {'class': 'col-md-3 label-control'}}) }}
                                 <div class="col-md-9">
                                     {{ form_widget(form.password, {'attr' : {'class' : 'form-control'}}) }}
                                     {{ form_errors(form.password) }}
                                 </div>

                             </div>
                             <div class="form-group row mx-auto">
                                 {{ form_label(form.userRoles, null,{'label_attr': {'class': 'col-md-3 label-control'}}) }}
                                 <div class="col-md-9">
                                     {{ form_widget(form.userRoles, {'attr' : {'class' : 'form-control select2'}}) }}
                                     {{ form_errors(form.userRoles) }}
                                 </div>

                             </div>
                         </div>
                        <div class="form-actions text-center">
                            <a href="{{ path('app_admin_user') }}" type="button" class="btn btn-warning mr-1">
                                <i class="ft-x"></i> Annuler
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="la la-check-square-o"></i> Enregistrer
                            </button>
                        </div>
                        {{ form_row(form._token) }}
                        {{ form_end(form, {render_rest: false}) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('app-assets/vendors/js/editors/ckeditor/ckeditor.js') }}"></script>
    <script>
        // Replace the <textarea id="editor1"> with a CKEditor 4
        // instance, using default configuration.
        CKEDITOR.replace( 'editor1' );
    </script>
{% endblock %}


